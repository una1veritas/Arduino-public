                        ;	CP/M 2.2 boot-loader for Z80-Simulator
                        ;
                        ;	Copyright (C) 1988-2007 by Udo Munk
                        ;
0000:                   	ORG	0		;mem base of boot
                        
0100:                   MON 	equ 	00100h
                        ;
0040:                   MSIZE	EQU	64		;mem size in kbytes
                        ;
B000:                   BIAS	EQU	(MSIZE-20)*1024	;offset from 20k system
E400:                   CCP	EQU	3400H+BIAS	;base of the ccp
FA00:                   BIOS	EQU	CCP+1600H	;base of the bios
0300:                   BIOSL	EQU	0300H		;length of the bios
FA00:                   BOOT	EQU	BIOS
1900:                   SIZE	EQU	BIOS+BIOSL-CCP	;size of cp/m system
0032:                   SECTS	EQU	SIZE/128	;# of sectors to load
                        ;
                        ;	I/O ports
                        ;
0001:                   CONDAT	EQU	1		;console data port
000A:                   DRIVE   EQU	10		;fdc-port: # of drive
000B:                   TRACK   EQU	11		;fdc-port: # of track
000C:                   SECTOR  EQU	12		;fdc-port: # of sector
000D:                   FDCOP   EQU	13		;fdc-port: command
000E:                   FDCST   EQU	14		;fdc-port: status
000F:                   DMAL    EQU	15		;dma-port: dma address low
0010:                   DMAH    EQU	16		;dma-port: dma address high
                        ;
0000: C30001   [10]     	jp  MON     ;JP	COLD
                        ;
                        	org 	0080h
0080: 424F4F54          ERRMSG:	DEFM	'BOOT: error booting'
0084: 3A206572          
0088: 726F7220          
008C: 626F6F74          
0090: 696E67            
0093: 0D0A00            	DEFB	13,10,0
                        ;
                        ;	begin the load operation
                        ;
0096: 010200   [10]     COLD:	LD	BC,2		;b=track 0, c=sector 2
0099: 1632     [17]     	LD	D,SECTS		;d=# sectors to load
009B: 2100E4   [27]     	LD	HL,CCP		;base transfer address
009E: 3E00     [34]     	LD	A,0		;select drive A
00A0: D30A     [45]     	OUT	(DRIVE),A
                        ;
                        ;	load the next sector
                        ;
00A2: 78       [ 4]     LSECT:	LD	A,B		;set track
00A3: D30B     [15]     	OUT	(TRACK),A
00A5: 79       [19]     	LD	A,C		;set sector
00A6: D30C     [30]     	OUT	(SECTOR),A
00A8: 7D       [34]     	LD	A,L		;set dma address low
00A9: D30F     [45]     	OUT	(DMAL),A
00AB: 7C       [49]     	LD	A,H		;set dma address high
00AC: D310     [60]     	OUT	(DMAH),A
00AE: AF       [64]     	XOR	A		;read sector
00AF: D30D     [75]     	OUT	(FDCOP),A
00B1: DB0E     [86]     	IN	A,(FDCST)	;get status of fdc
00B3: B7       [90]     	OR	A		;read successful ?
00B4: CAC900   [100|100]	JP	Z,CONT		;yes, continue
00B7: 218000   [110]    	LD	HL,ERRMSG	;no, print error
00BA: 7E       [ 7]     PRTMSG:	LD	A,(HL)
00BB: B7       [11]     	OR	A
00BC: CAC500   [21|21]  	JP	Z,STOP
00BF: D301     [32]     	OUT	(CONDAT),A
00C1: 23       [38]     	INC	HL
00C2: C3BA00   [48]     	JP	PRTMSG
00C5: F3       [ 4]     STOP:	DI
                        	;HALT			;and halt cpu
00C6: C30001   [14]     	jp 	MON
                        ;
00C9:                   CONT:
                        				;go to next sector if load is incomplete
00C9: 15       [ 4]     	DEC	D		;sects=sects-1
00CA: CA0001   [14|14]  	jp 	Z, MON
00CD: CA00FA   [24|24]  	JP	Z,BOOT		;head for the bios
                        	
                        ;
                        ;	more sectors to load
                        ;
                        ;	we aren't using a stack, so use <sp> as scratch register
                        ;	to hold the load address increment
                        ;
00D0: 318000   [34]     	LD	SP,128		;128 bytes per sector
00D3: 39       [45]     	ADD	HL,SP		;<hl> = <hl> + 128
                        ;
00D4: 0C       [49]     	INC	C		;sector = sector + 1
00D5: 79       [53]     	LD	A,C
00D6: FE1B     [60]     	CP	27		;last sector of track ?
00D8: DAA200   [70|70]  	JP	C,LSECT		;no, go read another
                        ;
                        ;	end of track, increment to next track
                        ;
00DB: 0E01     [77]     	LD	C,1		;sector = 1
00DD: 04       [81]     	INC	B		;track = track + 1
00DE: C3A200   [91]     	JP	LSECT		;for another group
                        ;
                        	END			;of boot loader


