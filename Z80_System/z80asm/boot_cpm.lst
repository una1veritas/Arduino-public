                        ;
0100:                   	ORG	0100h		;mem base of boot
                        ;	ORG	0		;mem base of boot
                        ;
0040:                   MSIZE	EQU	64		;mem size in kbytes
                        ;
B000:                   BIAS	EQU	(MSIZE-20)*1024	;offset from 20k system
E400:                   CCP	EQU	3400H+BIAS	;base of the ccp
FA00:                   BIOS	EQU	CCP+1600H	;base of the bios
0300:                   BIOSL	EQU	0300H		;length of the bios
FA00:                   BOOT	EQU	BIOS
1900:                   SIZE	EQU	BIOS+BIOSL-CCP	;size of cp/m system
0032:                   SECTS	EQU	SIZE/128	;# of sectors to load
                        ;
                        ;	I/O ports
                        ;
0001:                   CONDAT	EQU	1		;console data port
000A:                   DRIVE   EQU	10		;fdc-port: # of drive
000B:                   TRACK   EQU	11		;fdc-port: # of track
000C:                   SECTOR  EQU	12		;fdc-port: # of sector
000D:                   FDCOP   EQU	13		;fdc-port: command
000E:                   FDCST   EQU	14		;fdc-port: status
000F:                   DMAL    EQU	15		;dma-port: dma address low
0010:                   DMAH    EQU	16		;dma-port: dma address high
                        ;
0100: C31901   [10]     	JP	COLD
                        ;
0103: 424F4F54          ERRMSG:	DEFM	'BOOT: error booting'
0107: 3A206572          
010B: 726F7220          
010F: 626F6F74          
0113: 696E67            
0116: 0D0A00            	DEFB	13,10,0
                        ;
                        ;	begin the load operation
                        ;
0119: 010200   [10]     COLD:	LD	BC,2		;b=track 0, c=sector 2
011C: 1632     [17]     	LD	D,SECTS		;d=# sectors to load
011E: 2100E4   [27]     	LD	HL,CCP		;base transfer address
0121: 3E00     [34]     	LD	A,0		;select drive A
0123: D30A     [45]     	OUT	(DRIVE),A
                        ;
                        ;	load the next sector
                        ;
0125: 78       [ 4]     LSECT:	LD	A,B		;set track
0126: D30B     [15]     	OUT	(TRACK),A
0128: 79       [19]     	LD	A,C		;set sector
0129: D30C     [30]     	OUT	(SECTOR),A
012B: 7D       [34]     	LD	A,L		;set dma address low
012C: D30F     [45]     	OUT	(DMAL),A
012E: 7C       [49]     	LD	A,H		;set dma address high
012F: D310     [60]     	OUT	(DMAH),A
0131: AF       [64]     	XOR	A		;read sector
0132: D30D     [75]     	OUT	(FDCOP),A
0134: DB0E     [86]     	IN	A,(FDCST)	;get status of fdc
0136: B7       [90]     	OR	A		;read successful ?
0137: CA4A01   [100|100]	JP	Z,CONT		;yes, continue
013A: 210301   [110]    	LD	HL,ERRMSG	;no, print error
013D: 7E       [ 7]     PRTMSG:	LD	A,(HL)
013E: B7       [11]     	OR	A
013F: CA4801   [21|21]  	JP	Z,STOP
0142: D301     [32]     	OUT	(CONDAT),A
0144: 23       [38]     	INC	HL
0145: C33D01   [48]     	JP	PRTMSG
0148: F3       [ 4]     STOP:	DI
0149: 76       [ 8]     	HALT			;and halt cpu
                        ;
014A:                   CONT:
                        				;go to next sector if load is incomplete
014A: 15       [ 4]     	DEC	D		;sects=sects-1
014B: CA0010   [14|14]  	JP	Z, 01000h		;head for the bios
014E: CA00FA   [24|24]  	JP	Z,BOOT		;head for the bios
                        ;
                        ;	more sectors to load
                        ;
                        ;	we aren't using a stack, so use <sp> as scratch register
                        ;	to hold the load address increment
                        ;
0151: 318000   [34]     	LD	SP,128		;128 bytes per sector
0154: 39       [45]     	ADD	HL,SP		;<hl> = <hl> + 128
                        ;
0155: 0C       [49]     	INC	C		;sector = sector + 1
0156: 79       [53]     	LD	A,C
0157: FE1B     [60]     	CP	27		;last sector of track ?
0159: DA2501   [70|70]  	JP	C,LSECT		;no, go read another
                        ;
                        ;	end of track, increment to next track
                        ;
015C: 0E01     [77]     	LD	C,1		;sector = 1
015E: 04       [81]     	INC	B		;track = track + 1
015F: C32501   [91]     	JP	LSECT		;for another group
                        ;
                        	END			;of boot loader


